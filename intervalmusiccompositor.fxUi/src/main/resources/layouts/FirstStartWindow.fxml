<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?><?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane prefWidth="600" xmlns:fx="http://javafx.com/fxml/1">
    <VBox stylesheets="@/styles/fonts.css, @/styles/MainScreen.css" spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <padding>
            <Insets top="10" bottom="10" right="10" left="10"/>
        </padding>

        <Label text="%ui.firstStartWindow.welcome.title" styleClass="dialogParagraphTitle" />
        <Label text="%ui.firstStartWindow.welcome.text" styleClass="narrow"  wrapText="true"  />

        <Label text="%ui.firstStartWindow.updateSetting.title" styleClass="dialogParagraphTitle">
            <padding>
                <Insets top="15"/>
            </padding>
        </Label>

        <HBox>
            <CheckBox fx:id="checkForUpgradesOnStartupPreference">
                <padding>
                    <Insets right="15"/>
                </padding>
            </CheckBox>
            <Label text="%ui.firstStartWindow.updateSetting.text" styleClass="narrow" wrapText="true"  />
        </HBox>





        <BorderPane maxWidth="Infinity">
            <padding>
                <Insets top="10"/>
            </padding>
            <right>
                <Button fx:id="dismissButton" text="%ui.firstStartWindow.dismissButton"/>
            </right>
        </BorderPane>
    </VBox>
</AnchorPane>
