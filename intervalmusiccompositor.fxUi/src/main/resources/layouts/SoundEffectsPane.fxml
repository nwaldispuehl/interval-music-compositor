<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" >
  <top>
    <HBox spacing="10">
      <CheckBox fx:id="addSoundEffects" text="%ui.form.sound_effects.add.label" disable="true"/>
    </HBox>
  </top>
  <center>
    <HBox fx:id="soundEffectsContainer" spacing="10" alignment="CENTER" visible="false" >
      <padding>
        <Insets top="10" bottom="10"/>
      </padding>
      <ComboBox fx:id="soundEffects" />
      <Button fx:id="playSoundEffect" />
      <Slider fx:id="soundEffectStartTime" value="1" snapToTicks="true" showTickMarks="true"
              showTickLabels="true"  max="10" majorTickUnit="5" minorTickCount="4" minWidth="400" maxWidth="800"/>
    </HBox>
  </center>
</fx:root>
